/* pages/user/user.wxss */
.pyg-mine {
  background-color: #e9e9e9;
  width: 100vw;
  height: 100vh;
}
.pyg-mine .mine-info {
  border-bottom: 4rpx solid #ffffff;
  height: 35vh;
  position: relative;
}
.pyg-mine .mine-info .info-bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: 100% 100%;
  background-position: center;
  filter: blur(40rpx);
  background-color: white;
}
.pyg-mine .mine-info .info-avatar {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translate(-50%, 0);
}
.pyg-mine .mine-info .info-avatar .avatar {
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.pyg-mine .mine-info .info-name {
  position: absolute;
  color: #000000;
  bottom: 50rpx;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.pyg-mine .mine-info .info-nav {
  position: absolute;
  height: 100rpx;
  width: 92%;
  left: 50%;
  transform: translate(-50%);
  bottom: -50rpx;
  display: flex;
  background-color: white;
  border: 2rpx solid #ebebeb;
}
.pyg-mine .mine-info .info-nav navigator {
  flex: 1;
}
.pyg-mine .mine-info .info-nav navigator .item-num {
  color: var(--themeColor);
  padding: 8rpx;
}
.pyg-mine .mine-info .info-nav navigator .item-name {
  color: #4d4c4c;
}
.pyg-mine .mine-info .info-nav navigator view {
  text-align: center;
}
.pyg-mine .mine-main {
  margin-top: 55rpx;
  height: calc(65vh - 65rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pyg-mine .mine-main view[class^="main"] {
  width: 92%;
  background-color: white;
  margin-top: 20rpx;
  color: #4b4a4a;
}
.pyg-mine .mine-main .main-nav {
  height: 180rpx;
}
.pyg-mine .mine-main .main-nav .nav-title {
  border-bottom: 2rpx solid #dadada;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 20rpx;
}
.pyg-mine .mine-main .main-nav .nav-content {
  display: flex;
  height: calc(100% - 80rpx);
}
.pyg-mine .mine-main .main-nav .nav-content .nav-item {
  height: 100%;
  flex: 1;
  text-align: center;
  font-size: 26rpx;
}
.pyg-mine .mine-main .main-nav .nav-content .nav-item .iconfont {
  font-size: 38rpx;
  color: var(--themeColor);
  padding: 10rpx;
}
.pyg-mine .mine-main .main-address {
  height: 64rpx;
  line-height: 64rpx;
  text-indent: 20rpx;
  position: relative;
}
.pyg-mine .mine-main .main-address text {
  position: absolute;
  right: 20rpx;
  display: inline-block;
  border-right: 1px solid #b6b6b6;
  border-top: 1px solid #b6b6b6;
  top: 50%;
  transform: translate(0, -50%) rotate(45deg);
  width: 16rpx;
  height: 16rpx;
}
.pyg-mine .mine-main .main-other {
  height: 320rpx;
}
.pyg-mine .mine-main .main-other [class^="other"] {
  position: relative;
  height: calc(320rpx / 5);
  line-height: calc(320rpx / 5);
  border-bottom: 2px solid #f1f1f1;
  text-indent: 20rpx;
}
.pyg-mine .mine-main .main-other [class^="other"] text {
  position: absolute;
  right: 20rpx;
}
.pyg-mine .mine-main .main-other [class^="other"]:nth-child(n + 2) text {
  display: inline-block;
  border-right: 1px solid #b6b6b6;
  border-top: 1px solid #b6b6b6;
  top: 50%;
  transform: translate(0, -50%) rotate(45deg);
  width: 16rpx;
  height: 16rpx;
}
