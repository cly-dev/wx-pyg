.pyg-index {
  width: 100vw;
  height: 100vh;
}
.pyg-index .index-swiper {
  width: 100%;
}
.pyg-index .index-swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.pyg-index .index-nav {
  padding: 20rpx;
  width: 100vw;
  height: 170rpx;
  display: flex;
}
.pyg-index .index-nav .nav-item {
  flex: 1;
}
.pyg-index .index-nav .nav-item image {
  height: 100%;
  width: 100%;
}
.pyg-index .index-floor {
  width: 100%;
}
.pyg-index .index-floor .floor-title {
  background-color: white;
}
.pyg-index .index-floor .title-item {
  background-color: #eeeeee;
}
.pyg-index .index-floor .title-item .title-image {
  width: 100%;
  height: 70rpx;
}
.pyg-index .index-floor .floor-list navigator {
  float: left;
  width: 33.33%;
  height: 54vw;
  padding: 5rpx;
}
.pyg-index .index-floor .floor-list navigator:nth-last-child(-n + 4) {
  height: 27vw;
}
.pyg-index .index-floor .floor-list navigator image {
  height: 100%;
  width: 100%;
}
